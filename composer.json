{
  "name": "rick-torelli/php84-app",
  "description": "Ambiente de desenvolvimento PHP 8.4 com Docker, MySQL, Redis e phpMyAdmin.",
  "type": "project",
  "require": {
    "php": "^8.4",
    "vlucas/phpdotenv": "^5.6",
    "symfony/var-dumper": "^7.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^11.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/App/"
    },
    "files": [
      "src/App/Helpers/helpers.php",
      "src/App/Router/router.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "phpunit",
    "cs-fix": "php-cs-fixer fix"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
